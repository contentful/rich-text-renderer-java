<resources>

    <!-- Base application theme. -->
    <style name="Theme.RichTextRendererSample" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="Theme.RichTextRendererSample.NoActionBar" parent="Theme.RichTextRendererSample">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RichTextRendererSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.RichTextRendererSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
